<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:hint="@string/input_file"
        android:textSize="@dimen/text_size_18" />


    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:background="@color/color_button1"
        android:onClick="write"
        android:text="@string/record_data" />

    <Button
        android:id="@+id/button_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:background="@color/color_button2"
        android:onClick="read"
        android:text="@string/read_data" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="@dimen/text_300"
        android:layout_height="@dimen/text_100"
        android:textColor="@color/color_text_view"
        android:textSize="@dimen/text_size_20" />

</LinearLayout>